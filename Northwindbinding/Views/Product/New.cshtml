@model CreateFormModel

@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<h4>Products</h4>
<hr />
<div class="row">
    <div class="col-md-offset-4 col-md-4">
        <form asp-action="HandleProduct">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label class="control-label"></label>
                <input placeholder="ProductName" value="asdf" name="ProductName" type="text" class="form-control" />
            </div>

            <div class="form-group">
                <label  class="control-label"></label>
                <select class="form-control" name="Supplier">
                    @foreach(var category in Model.Categories)
                    {
                        <option value="@category.CategoryName">@category.CategoryName</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label  class="control-label"></label>
                <select class="form-control" name="Category">
                    @foreach(var supplier in Model.Suppliers)
                    { 
                        <option value="@supplier.CompanyName">@supplier.CompanyName</option>
                    }
                </select>
                
            </div>
            <div class="form-group">
                <label  class="control-label"></label>
                <input placeholder="UnitPrice" name="UnitPrice" value="123" type="text" class="form-control" />
            </div>

            <div class="form-group">
                <label  class="control-label"></label>
                <input placeholder="QuantityPerUnit" value="12" name="QuantityPerUnit" type="text" class="form-control" />
            </div>

            <div class="form-group">
                <input name="saveButton" type="submit" value="Save" class="btn btn-default"/>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
